- if @record.try(:name)
  #accordion.panel-group
    = miq_accordion_panel(truncate(@record.name, :length => truncate_length), true, 'icon') do
      = render_quadicon(@record, :mode => :icon, :size => 72, :typ => :listnav)

    = miq_accordion_panel(_('Properties'), false, 'middleware_camel_entity_prop') do
      %ul.nav.nav-pills.nav-stacked
        %li
          = link_to(_('Summary'), {:action => 'show', :id => @record, :display => 'main'}, :title => _('Show Summary'))

    = miq_accordion_panel(_('Relationships'), false, 'middleware_camel_entity_rel') do
      %ul.nav.nav-pills.nav-stacked
        = single_relationship_link(@record, :middleware_camel_context, 'middleware_camel_context')
